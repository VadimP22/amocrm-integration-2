<div>
    {% set break = false %}
    {% set title = "title" %}
    {% for item in items if not break %}
        {% if item.key == selectedKey %}
            {% set title = item.text %}
        {% endif %}
    {% endfor %}
    <p id="{{prefix ~ "-user-selected"}}" class="font-semibold cursor-pointer">{{title}}</p>
    <div id="{{prefix ~ "-user-selector-list-root"}}" class="hidden z-50 fixed bg-white mt-2 overflow-y-scroll h-44" style="width: inherit;">
    {% for item in items %}
        {% if item.type == 'user' %}
        <div id="{{prefix ~ "-user-selector-item-" ~ item.key}}" class="cursor-pointer text-gray-600 border-2 border-transparent hover:border-slate-300 font-sans font-semibold px-4 py-2 bg-white z-50 hover:bg-slate-200 w-full">{{item.text}}</div>
        {% else %}
        <div class="cursor-default text-gray-600 border-2 border-transparent font-sans font-semibold px-4 py-2 bg-gray-300 z-50">{{item.text}}</div>
        {% endif %}
    {% endfor %}
    </div>
</div>
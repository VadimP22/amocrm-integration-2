<div>
    <div id="{{prefix ~ '-status'}}" class="flex justify-between items-center cursor-pointer">
        {% set break = false %}
        {% set title = "title" %}
        {% for item in items if not break %}
            {% if item.key == selectedKey %}
                {% set title = item.text %}
            {% endif %}
        {% endfor %}
        <p id="{{prefix ~ '-title'}}" class="text-white font-semibold">{{title}}</p>
        <svg class="fill-white" width="10" height="10">
            <polygon points="0,0 10,0 5,10"/>
        </svg>
    </div>

    <div class="flex w-full h-1 mt-2" style="background-color: #182C36;">
    {% set width = 100/items.length %}
    {% set break = false %}
    {% for item in items if not break %}
        <div class="h-1 bg-red-400" style="width: {{width}}%; background-color: {{item.color}};"></div>
        {% if item.key == selectedKey %}
            {% set break = true %}
        {% endif %}
    {% endfor %}
    </div>

    <div id="{{prefix ~ '-list-root'}}" class="hidden z-50 fixed bg-white mt-2 overflow-y-scroll h-44" style="width: inherit;">
    {% for item in items %}
        <div style="background-color: {{item.color}};" id="{{prefix ~ '-item-' ~ item.key}}" class="cursor-pointer text-gray-600 border-2 border-transparent hover:border-slate-300 font-sans font-semibold px-4 py-2 bg-cyan-200 z-50 hover:bg-slate-200 w-full">{{item.text}}</div>
    {% endfor %}
    </div>
</div>